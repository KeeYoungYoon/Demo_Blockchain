<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jungwonseo.multiactivity.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="Main Menu"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/customerbtn"
        android:layout_width="104dp"
        android:layout_height="52dp"
        android:layout_marginRight="140dp"
        android:text="Customer"
        app:layout_constraintRight_toRightOf="parent"
        android:onClick="customerClick"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/loginData" />

    <Button
        android:id="@+id/Expensebtn"
        android:layout_width="104dp"
        android:layout_height="52dp"
        android:layout_marginRight="140dp"
        android:layout_marginTop="16dp"
        android:text="Expense"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/customerbtn"
        android:onClick="expenseClick"/>

    <Button
        android:id="@+id/Productbtn"
        android:layout_width="104dp"
        android:layout_height="52dp"
        android:layout_marginRight="140dp"
        android:layout_marginTop="16dp"
        android:text="Product"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Expensebtn"
        android:onClick="productClick"/>

    <TextView
        android:id="@+id/loginData"
        android:layout_width="183dp"
        android:layout_height="99dp"
        android:text="TextView"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="63dp"
        android:layout_marginRight="100dp"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
